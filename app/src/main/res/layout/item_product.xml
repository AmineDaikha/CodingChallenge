<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="250sp"
    android:layout_height="350sp"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="@android:color/transparent"
    android:paddingLeft="7sp"
    android:paddingRight="7sp">


    <RelativeLayout
        android:id="@+id/contnet"
        android:layout_width="200sp"
        android:layout_height="250sp"
        android:layout_centerInParent="true"
        android:background="@drawable/rectangle">

        <!--            first part -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_gravity="left"
            android:layout_marginBottom="10sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/categoryName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="15sp"
                    android:text="Pizza Royal"
                    android:textColor="@color/icons"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/titleProd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="15sp"
                    android:text="Pizza Royal"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/priceProd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="15sp"
                    android:text="200.00 $"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/add_to_cart"
                android:layout_width="60sp"
                android:layout_height="65sp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_margin="4sp"
                android:background="@drawable/rectangle_border_white">

                <ImageView
                    android:id="@+id/ic_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_shopping" />
            </RelativeLayout>
        </LinearLayout>

        <!--            first part -->
    </RelativeLayout>

    <ImageView
        android:id="@+id/imgPlat"
        android:layout_width="200sp"
        android:layout_height="150sp"
        android:layout_alignLeft="@+id/contnet"
        android:layout_alignTop="@+id/contnet"
        android:layout_marginLeft="0sp"
        android:layout_marginTop="-10sp"
        android:src="@drawable/ic_launcher_background" />


</RelativeLayout>